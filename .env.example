# Example environment variables for HomeFood Connect
# Copy this file to `.env` and replace the placeholder values.

# Django settings
SECRET_KEY=django-insecure-change-this-in-production-key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Use SQLite for quick local setup (set to True/False)
USE_SQLITE=True

# MySQL settings (used when USE_SQLITE=False)
DB_NAME=homefood_db
DB_USER=root
DB_PASSWORD=your_mysql_password_here
DB_HOST=localhost
DB_PORT=3306

# Google Maps API Key (required for Nearby Cooks map)
#  - Create a key in Google Cloud Console
#  - Enable "Maps JavaScript API"
#  - Enable billing on the project
#  - Optionally add HTTP referrer restriction: http://127.0.0.1:8000
GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY_HERE

# Razorpay (payments)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# MSG91 (notifications)
MSG91_AUTH_KEY=
MSG91_SENDER_ID=
